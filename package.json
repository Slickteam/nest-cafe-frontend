{
  "name": "nest-cafe-frontend",
  "version": "0.0.1",
  "author": "Ronan MOREL",
  "description": "Nest cafe frontend application",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "eslint": "eslint --cache",
    "lint": "eslint --cache --ext .js,vue --ignore-path .gitignore .",
    "lint:fix": "eslint --cache --ext .js,vue --ignore-path .gitignore . --fix",
    "lint:css": "stylelint --cache src/**/*.{css,scss,vue}",
    "lint:css:fix": "stylelint --cache src/**/*.{css,scss,vue} --fix",
    "prettier:simple": "prettier --cache --check",
    "prettier": "prettier --cache --check .",
    "prettier:fix": "prettier --cache --write .",
    "prepare": "husky install || true"
  },
  "lint-staged": {
    "*.{js,ts}": "npm run eslint",
    "*": "npm run prettier:simple"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.12",
    "axios": "^1.3.5",
    "keycloak-js": "^21.0.2",
    "pinia": "^2.0.33",
    "pinia-plugin-persistedstate": "^3.1.0",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@vitejs/plugin-vue": "^4.1.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.6.0",
    "tailwindcss": "^3.3.1",
    "vite": "^4.2.1"
  },
  "volta": {
    "node": "18.15.0",
    "npm": "9.6.4"
  }
}
